#!/bin/bash

source ~/.dotfiles/scripts/prepare.sh

I3_CONFIG=~/.i3/config

rm -rf $I3_CONFIG
disp "Generating new i3 gaps config file.."
echo "# NOTICE: GENERATED FILE IS READ-ONLY!!!" >> $I3_CONFIG
echo "#         EDIT FILES ~/.dotfiles/.config/i3/ INSTEAD!!!" >> $I3_CONFIG
echo "# -----------------------------------------------------" >> $I3_CONFIG
cat ~/.dotfiles/.config/i3/config >> $I3_CONFIG

cat -s ~/.dotfiles/.config/i3/config.manjaro >> $I3_CONFIG
disp "Making the config file read only.."
chmod 0444 $I3_CONFIG
disp "All done! Have a nice day."
