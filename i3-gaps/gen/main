#!/bin/bash

source ~/.dotfiles/scripts/prepare.sh

I3_CONFIG=~/.i3/config

rm -rf $I3_CONFIG
disp "Generating new config file.."
echo "# NOTICE: GENERATED FILE IS READ-ONLY!!!" >> $I3_CONFIG
echo "#		    EDIT FILES ~/.dotfiles/.config/i3/ INSTEAD!!!" >> $I3_CONFIG
echo "# -----------------------------------------------------" >> $I3_CONFIG
cat ~/.dotfiles/.config/i3/config >> $I3_CONFIG
