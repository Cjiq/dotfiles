#Cjiq i3-gaps config

###---Basic Definitions---###
#Needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 2
client.focused	#fd971f #fd971f #fd971f #fd971f
# gaps inner 18
# gaps outer 2
gaps inner 10
gaps outer 2
font pango:monospace 12
#font pango:Sans 12

set $mod Mod1
set $term termite
set $browser chromium

focus_follows_mouse no

exec_always --no-startup-id xcompmgr &
#Add wallpaper:
exec_always --no-startup-id feh --bg-scale --randomize ~/.dotfiles/bgs/*.jpg

###---Useful scripts---###
#Mini math buffer
#I'll later bind this to mod+a.
exec termite -c "$HOME/.config/termite/config-math" --class="math" --name="math" -e "octave_math"
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 1

exec termite --class="trans" --name="trans" -e "trans :sv -I"
for_window [instance="trans"] floating enable
for_window [instance="trans"] resize set 800 300
for_window [instance="trans"] move position center
for_window [instance="trans"] move scratchpad
for_window [instance="trans"] border pixel 1

#FOR ALSA/AMIXER
set $inc --no-startup-id amixer sset Master 2%+
set $biginc --no-startup-id amixer sset Master 5%+
set $dec --no-startup-id amixer sset Master 2%-
set $bigdec --no-startup-id amixer sset Master 5%-
set $mute --no-startup-id amixer sset Master toggle

#For PULSEAUDIO/PAMIXER
# set $inc --no-startup-id pamixer --allow-boost -i 5
# set $biginc --no-startup-id pamixer --allow-boost -i 15
# set $dec --no-startup-id pamixer --allow-boost -d 5
# set $bigdec --no-startup-id pamixer --allow-boost -d 15
# set $mute --no-startup-id pamixer --allow-boost -t

for_window [class="^Spotify$"] move container to workspace $ws7
#Make all windows transparet
# for_window [class="^(.*?)$"] exec transset-df -a 0.94
for_window [class="^Termite$"] exec transset-df -a 0.97

###---Keybindings---###
bindsym $mod+Return				exec --no-startup-id $term
bindsym $mod+Shift+Return		exec --no-startup-id term_at_pwd $term
bindsym $mod+q					kill
bindsym $mod+Shift+q			kill

bindsym $mod+Shift+space 	floating toggle
bindsym $mod+space		focus mode_toggle

bindsym $mod+Shift+backspace	exec shutdown -h -r now

bindsym $mod+w			exec --no-startup-id $browser

bindsym $mod+r			exec $term -e ranger 
bindsym $mod+d			exec rofi -theme Monokai -show run

bindsym $mod+c			exec xclip -o -selection clipboard | xclip
bindsym $mod+v			exec xclip -o | xclip -i -selection clipboard

bindsym $mod+f 			fullscreen toggle

bindsym $mod+a			[class="math" instance="math"] scratchpad show; move position center
bindsym $mod+t			[class="trans" instance="trans"] scratchpad show; move position center
bindsym $mod+m			exec --no-startup-id $browser --app=https://messenger.com

bindsym $mod+Shift+c	exec --no-startup-id $browser --app=https://calendar.google.com/calendar/r?pli=1

bindsym $mod+h 			focus left
bindsym $mod+Shift+h 	move left 30

bindsym $mod+j 			focus down
bindsym $mod+Shift+j 	move down 30

bindsym $mod+k 			focus up
bindsym $mod+Shift+k 	move up 30

bindsym $mod+l 			focus right
bindsym $mod+Shift+l 	move right 30

bindsym $mod+minus		split vertical ;; exec $term
bindsym $mod+period		split horizontal ;; exec $term

bindsym $mod+Ctrl+minus		split vertical ;; exec $term -d $(xcwd)
bindsym $mod+Ctrl+period	split horizontal ;; exec $term -d $(xcwd)

bindsym $mod+Ctrl+l		exec --no-startup-id blurlock
bindsym $mod+Ctrl+s		exec --no-startup-id sus

bindsym $mod+Ctrl+h		resize shirnk width 5px or 5pt

bindsym $mod+Ctrl+k		resize grow height 5px or 5pt
bindsym $mod+Ctrl+j		resize shirnk height 5px or 5pt

bindsym $mod+1			workspace $ws1
bindsym $mod+Shift+1	move container to workspace $ws1

bindsym $mod+2			workspace $ws2
bindsym $mod+Shift+2	move container to workspace $ws2

bindsym $mod+3			workspace $ws3
bindsym $mod+Shift+3	move container to workspace $ws3

bindsym $mod+4			workspace $ws4
bindsym $mod+Shift+4	move container to workspace $ws4

bindsym $mod+5			workspace $ws5
bindsym $mod+Shift+5	move container to workspace $ws5

bindsym $mod+6			workspace $ws6
bindsym $mod+Shift+6	move container to workspace $ws6

bindsym $mod+7			workspace $ws7
bindsym $mod+Shift+7	move container to workspace $ws7

bindsym $mod+Ctrl+b		exec --no-startup-id sp play
bindsym $mod+Ctrl+n		exec --no-startup-id sp prev
bindsym $mod+Ctrl+m		exec --no-startup-id sp next

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"

###---Extra XF86 Keys---###
#These are the extra media keys that some keyboards have.
bindsym XF86AudioMute			exec $mute
bindsym XF86AudioLowerVolume	exec $dec
bindsym XF86AudioRaiseVolume	exec $inc
bindsym XF86MonBrightnessDown	exec --no-startup-id backlight_mod -5
bindsym XF86MonBrightnessUp	exec --no-startup-id backlight_mod 5
# Volume control
# bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
# bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
# bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

# Play/Pause, change songs
bindsym XF86AudioPlay exec sp play
bindsym XF86AudioNext exec sp next
bindsym XF86AudioPrev exec sp prev

exec --no-startup-id after-login
exec --no-startup-id killall -q spotify
exec --no-startup-id sleep 1; exec --no-startup-id spotify
